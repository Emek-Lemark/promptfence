{
  "manifest_version": 3,
  "name": "PromptFence (Personal)",
  "version": "1.0.0",
  "description": "Protects your sensitive data from being pasted into AI chat prompts. Detects emails, phones, IBANs, credit cards, and more.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": ["rules.js", "src/logic.js", "content.js"],
      "css": ["ui.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "options_page": "options.html"
}
